{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "#bcrypt-type": ["src/libs/bcrypt/type-bcrypt-wrapper.ts"],
      "#bcrypt-wrapper": ["src/libs/bcrypt/index.ts"],
      "#config": ["src/config/index.ts"],
      "#contract-account": ["src/contract/account/index.ts"],
      "#contract-auth": ["src/contract/auth/index.ts"],
      "#contract-mongoose": ["src/contract/mongoose/index.ts"],
      "#contract-product": ["src/contract/product/index.ts"],
      "#controller": ["src/components/Controller/controller.ts"],
      "#errors-mongoose": ["src/errors/mongoose-errors.ts"],
      "#http": ["src/http/index.ts"],
      "#http-errors": ["src/errors/http-errors.ts"],
      "#jwt-wrapper": ["src/libs/jsonwebtoken/index.ts"],
      "#middlewares": ["src/middlewares/validationHandler.ts"],
      "#model": ["src/components/Model/model.ts"],
      "#model-type": ["src/components/Model/type-model.ts"],
      "#mongoose-error-handler": ["src/errors/mongoose-error-handler.ts"],
      "#mongoose-wrapper/*": ["src/libs/mongoose/*"],
      "#permission-checker": ["src/middlewares/permissionChecker.ts"],
      "#person-model": ["src/resources/modules/account/person/PersonModel.ts"],
      "#person-model-type": ["src/resources/modules/account/person/type-person.ts"],
      "#schema": ["src/schema/index.ts"],
      "#services": ["src/service/index.ts"],
      "#utils": ["src/utils/toArray.ts"]
    },
    "resolveJsonModule": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules", 
    "**/*.test.ts",
    "**/*.spec.ts"]
}
