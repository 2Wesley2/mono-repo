{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "#src/utils/toArray": ["src/utils/toArray.ts"],
      "#model-type": ["src/components/Model/type-model.ts"],
      "#person-model-type": ["src/resources/modules/account/person/type-person.ts"],
      "#bcrypt-type": ["src/libs/bcrypt/type-bcrypt-wrapper.ts"],
      "#model": ["src/components/Model/model.ts"],
      "#person-model": ["src/resources/modules/account/person/PersonModel.ts"],
      "#mongoose-wrapper": ["src/libs/mongoose/mongoose-wrapper.ts"],
      "#errors": ["src/errors/Exceptions.ts"],
      "#middlewares": ["src/middlewares/validationHandler.ts"],
      "#http-request": ["src/http/type-request.ts"],
      "#type-mongoose-wrapper": [ "src/libs/mongoose/type-mongoose-wrapper.ts"]
    },
    "resolveJsonModule": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
