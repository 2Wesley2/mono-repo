{
  "npmClient": "yarn",
  "packages": ["packages/*"],
  "version": "0.0.0",
  "command": {
    "publish": {
      "ignoreChanges": ["*.md"]
    },
    "bootstrap": {
      "hoist": true
    },
    "run": {
      "stream": true,
      "npmClientArgs": ["--loader", "ts-node/esm", "--loader", "tsconfig-paths/register"]
    }
  },
  "loglevel": "silly"
}
